{
    "manifest_version": 3,
    "name": "IntelliTab",
    "version": "1.0.0",
    "description": "AI-powered browser extension that intelligently organizes tabs.",
    "permissions": [
        "tabs",
        "tabGroups",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "src/background.ts",
        "type": "module"
    },
    "icons": {
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "icon-48.png",
            "128": "icon-128.png"
        }
    },
    "options_page": "options.html"
}